<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GerenciamentoConta">

    <!-- Título: Informações da conta -->
    <TextView
        android:id="@+id/textAccountInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Informações da Conta"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Imagem centralizada -->
    <ImageView
        android:id="@+id/imageAccountInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAccountInfoTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_account_info"
        android:contentDescription="Imagem da Conta" />

    <!-- Título: Informações Básicas -->
    <TextView
        android:id="@+id/textBasicInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageAccountInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Informações Básicas"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Link para Nome -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBasicInfoTitle"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nome"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_right_double_light"
            android:contentDescription="Seta para a próxima tela"/>

    </LinearLayout>

    <!-- Link para Número de Telefone -->
    <LinearLayout
        android:id="@+id/layoutPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutName"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/textPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Número de Telefone"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_right_double_light"
            android:contentDescription="Seta para a próxima tela"/>
    </LinearLayout>

    <!-- Link para E-mail -->
    <LinearLayout
        android:id="@+id/layoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutPhoneNumber"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="E-mail"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_right_double_light"
            android:contentDescription="Seta para a próxima tela"/>
    </LinearLayout>

    <!-- Link para Senha -->
    <LinearLayout
        android:id="@+id/layoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEmail"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Senha"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_right_double_light"
            android:contentDescription="Seta para a próxima tela"/>
    </LinearLayout>


</RelativeLayout>
